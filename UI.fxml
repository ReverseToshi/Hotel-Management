<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotel.controller.HotelManagementController">
   <top>
      <VBox>
         <MenuBar>
            <Menu text="File">
               <MenuItem fx:id="menuExport" text="Export Reports" />
               <MenuItem fx:id="menuBackup" text="Backup Data" />
               <SeparatorMenuItem />
               <MenuItem fx:id="menuExit" text="Exit" />
            </Menu>
            <Menu text="View">
               <MenuItem fx:id="menuRefresh" text="Refresh" />
               <MenuItem fx:id="menuSettings" text="Settings" />
            </Menu>
            <Menu text="Help">
               <MenuItem fx:id="menuAbout" text="About" />
            </Menu>
         </MenuBar>
         <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="Hotel Management System - Staff Portal" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
            </Label>
         </HBox>
      </VBox>
   </top>
   
   <left>
      <VBox prefWidth="200.0" style="-fx-background-color: #ecf0f1; -fx-padding: 10;" spacing="10.0">
         <Label text="Quick Actions" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <Button fx:id="btnCheckIn" maxWidth="Infinity" text="Check In Guest" />
         <Button fx:id="btnCheckOut" maxWidth="Infinity" text="Check Out Guest" />
         <Button fx:id="btnNewReservation" maxWidth="Infinity" text="New Reservation" />
         <Button fx:id="btnHousekeeping" maxWidth="Infinity" text="Housekeeping" />
         <Separator />
         <Label text="Reports" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <Button fx:id="btnOccupancyReport" maxWidth="Infinity" text="Occupancy Report" />
         <Button fx:id="btnRevenueReport" maxWidth="Infinity" text="Revenue Report" />
         <Button fx:id="btnGuestReport" maxWidth="Infinity" text="Guest Report" />
      </VBox>
   </left>
   
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="SELECTED_TAB">
         <Tab fx:id="tabDashboard" text="Dashboard">
            <GridPane hgap="20.0" vgap="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               
               <!-- Hotel Statistics -->
               <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <Label text="Today's Overview" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                  <GridPane hgap="10.0" vgap="10.0">
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                     <Label text="Total Rooms:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <Label fx:id="lblTotalRooms" text="150" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                     <Label text="Occupied:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <Label fx:id="lblOccupiedRooms" text="120" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     <Label text="Available:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                     <Label fx:id="lblAvailableRooms" text="30" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     <Label text="Occupancy Rate:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                     <Label fx:id="lblOccupancyRate" text="80%" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  </GridPane>
               </VBox>
               
               <!-- Pending Tasks -->
               <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                  <Label text="Pending Tasks" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                  <ListView fx:id="listPendingTasks" prefHeight="150.0">
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </ListView>
               </VBox>
               
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
         </Tab>
         
         <Tab fx:id="tabReservations" text="Reservations">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <!-- Search and Filter -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Search:" />
                  <TextField fx:id="txtSearchReservation" promptText="Guest name, confirmation number..." />
                  <Button fx:id="btnSearchReservation" text="Search" />
                  <Separator orientation="VERTICAL" />
                  <Label text="Filter by Date:" />
                  <DatePicker fx:id="datePickerFilter" />
                  <Button fx:id="btnClearFilter" text="Clear" />
               </HBox>
               
               <!-- Reservations Table -->
               <TableView fx:id="tableReservations" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="colConfirmation" text="Confirmation #" />
                     <TableColumn fx:id="colGuestName" text="Guest Name" />
                     <TableColumn fx:id="colRoomNumber" text="Room" />
                     <TableColumn fx:id="colCheckIn" text="Check In" />
                     <TableColumn fx:id="colCheckOut" text="Check Out" />
                     <TableColumn fx:id="colStatus" text="Status" />
                     <TableColumn fx:id="colActions" text="Actions" />
                  </columns>
               </TableView>
               
               <!-- Action Buttons -->
               <HBox alignment="CENTER_RIGHT" spacing="10.0">
                  <Button fx:id="btnEditReservation" text="Edit" />
                  <Button fx:id="btnCancelReservation" text="Cancel" />
                  <Button fx:id="btnAddReservation" text="Add New" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
               </HBox>
            </VBox>
         </Tab>
         
         <Tab fx:id="tabRooms" text="Room Management">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <!-- Room Status Filter -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Filter by Status:" />
                  <ComboBox fx:id="comboRoomStatus" promptText="All Rooms" />
                  <Label text="Floor:" />
                  <ComboBox fx:id="comboFloor" promptText="All Floors" />
                  <Button fx:id="btnRefreshRooms" text="Refresh" />
               </HBox>
               
               <!-- Rooms Grid -->
               <ScrollPane VBox.vgrow="ALWAYS">
                  <GridPane fx:id="gridPaneRooms" hgap="10.0" vgap="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </ScrollPane>
            </VBox>
         </Tab>
         
         <Tab fx:id="tabGuests" text="Guest Management">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <!-- Guest Search -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Search Guest:" />
                  <TextField fx:id="txtSearchGuest" promptText="Name, email, phone..." />
                  <Button fx:id="btnSearchGuest" text="Search" />
                  <Button fx:id="btnAddGuest" text="Add New Guest" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
               </HBox>
               
               <!-- Guest Table -->
               <TableView fx:id="tableGuests" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="colGuestId" text="ID" />
                     <TableColumn fx:id="colFirstName" text="First Name" />
                     <TableColumn fx:id="colLastName" text="Last Name" />
                     <TableColumn fx:id="colEmail" text="Email" />
                     <TableColumn fx:id="colPhone" text="Phone" />
                     <TableColumn fx:id="colLastStay" text="Last Stay" />
                     <TableColumn fx:id="colGuestActions" text="Actions" />
                  </columns>
               </TableView>
            </VBox>
         </Tab>
         
         <Tab fx:id="tabHousekeeping" text="Housekeeping">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <!-- Housekeeping Status -->
               <HBox alignment="CENTER_LEFT" spacing="15.0">
                  <Label text="Filter by Status:" />
                  <ComboBox fx:id="comboHousekeepingStatus" promptText="All Statuses" />
                  <Label text="Assigned to:" />
                  <ComboBox fx:id="comboHousekeepingStaff" promptText="All Staff" />
                  <Button fx:id="btnRefreshHousekeeping" text="Refresh" />
               </HBox>
               
               <!-- Housekeeping Table -->
               <TableView fx:id="tableHousekeeping" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="colHkRoomNumber" text="Room" />
                     <TableColumn fx:id="colHkStatus" text="Status" />
                     <TableColumn fx:id="colHkAssignedTo" text="Assigned To" />
                     <TableColumn fx:id="colHkPriority" text="Priority" />
                     <TableColumn fx:id="colHkEstimatedTime" text="Est. Time" />
                     <TableColumn fx:id="colHkNotes" text="Notes" />
                     <TableColumn fx:id="colHkActions" text="Actions" />
                  </columns>
               </TableView>
               
               <!-- Housekeeping Actions -->
               <HBox alignment="CENTER_RIGHT" spacing="10.0">
                  <Button fx:id="btnAssignTask" text="Assign Task" />
                  <Button fx:id="btnMarkComplete" text="Mark Complete" />
                  <Button fx:id="btnAddMaintenanceRequest" text="Add Maintenance Request" />
               </HBox>
            </VBox>
         </Tab>
      </TabPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #34495e; -fx-padding: 5;">
         <Label fx:id="lblStatusBar" text="Ready" textFill="WHITE" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="lblCurrentUser" text="Logged in as: Admin" textFill="WHITE" />
         <Separator orientation="VERTICAL" />
         <Label fx:id="lblCurrentTime" text="00:00:00" textFill="WHITE" />
      </HBox>
   </bottom>
</BorderPane>

